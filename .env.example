# Discord Bot Configuration
DISCORD_TOKEN=
CLIENT_ID=
GUILD_ID=

# Environment Configuration
# LOG_LEVEL options: error, warn, info, debug, verbose, silly
NODE_ENV=development
LOG_LEVEL=info
# Set to 'false' in production containers to only log to stdout
LOG_TO_FILE=true
LOG_FILE=bot.log

# Audio Configuration
MAX_QUEUE_SIZE=50
EXTRACTION_TIMEOUT=30000
INACTIVITY_TIMEOUT=300000
FFMPEG_ACTIVITY_CHECK_INTERVAL=10000
FFMPEG_INACTIVE_WARNING_THRESHOLD=30000
FFMPEG_INACTIVE_KILL_THRESHOLD=60000
ENABLE_UNLIMITED_LENGTH=true

# Test Configuration
TEST_MODE=false
TEST_GUILD_ID=

